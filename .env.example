# Environment Variables Example
# Copy this file to .env and .env.local and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/whatsapp?retryWrites=true&w=majority

# WhatsApp Configuration (Standard Server Only)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome
DEBUG=puppeteer:*

# Node.js Configuration
NODE_OPTIONS=--max-old-space-size=4096

# AI Integration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Session Security
SESSION_SECRET=your_unique_session_secret_key_here

# Gateway Configuration (Vercel Only)
WHATSAPP_API_URL=https://your-whatsapp-server.com
WHATSAPP_API_KEY=your_api_key_for_whatsapp_server

# Application Information
APP_NAME=WhatsApp Bot
APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log